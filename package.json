{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap && lerna link",
    "build-all": "yarn run build-lens && yarn run build-rxjs-atom && yarn run build-rxjs-react && yarn run build-rxjs-atom-promise && yarn run build-list && yarn run build-list-react-native && yarn run build-rxjs-react-native && yarn run build-form-store",
    "build-lens": "yarn workspace @rixio/lens run build",
    "build-rxjs-atom": "yarn workspace @rixio/rxjs-atom run build",
    "build-list": "yarn workspace @rixio/list run build",
    "build-list-react-native": "yarn workspace @rixio/list-react-native run build",
    "build-rxjs-atom-promise": "yarn workspace @rixio/rxjs-atom-promise run build",
    "build-rxjs-react": "yarn workspace @rixio/rxjs-react run build",
    "build-rxjs-react-native": "yarn workspace @rixio/rxjs-react-native run build",
    "build-form-store": "yarn workspace @rixio/form-store run build",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ./",
    "prettify": "prettier --write **/src/**/*",
    "test": "yarn workspaces run test",
    "verify": "yarn workspaces run verify"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "yarn run prettify"
    ]
  },
  "dependencies": {
    "immutable": "4.0.0-rc.12",
    "react": "16.13.1",
    "react-native": "0.62.2",
    "rxjs": "6.5.5"
  },
  "devDependencies": {
    "@roborox/eslint-config-default": "2.2.0",
    "eslint": "7.10.0",
    "eslint-config-prettier": "6.11.0",
    "husky": "4.3.0",
    "lerna": "^3.20.2",
    "lint-staged": "10.4.0",
    "prettier": "2.1.2"
  }
}
